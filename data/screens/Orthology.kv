ShowcaseScreen:
    name: "Orthology"

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: 50
            padding: 5
            AnchorLayout:
                anchor_x: "left"
                anchor_y: "center"
                size_hint_x: None
                width: 100
                Button:
                    text: "Previous"
                    disabled: True if orto_car.current_slide == orto_car.slides[0] else False
                    on_release: orto_car.load_previous()

            AnchorLayout:
                anchor_y: "center"
                anchor_x: "center"
                BoxLayout:
                    size_hint_x: None
                    padding: 5
                    spacing: 5
                    width: 135
                    ToggleButton:
                        group: "orto"
                        state: "down" if orto_car.current_slide == orto_car.slides[0] else "normal"
                    ToggleButton:
                        group: "orto"
                        state: "down" if orto_car.current_slide == orto_car.slides[1] else "normal"
                    ToggleButton:
                        group: "orto"
                        state: "down" if orto_car.current_slide == orto_car.slides[2] else "normal"
            AnchorLayout:
                anchor_x: "right"
                anchor_y: "center"
                size_hint_x: None
                width: 100
                Button:
                    text: "Next"
                    disabled: True if orto_car.current_slide == orto_car.slides[2] else False
                    on_release: orto_car.load_next()

        ScrollView:
            Carousel:
                direction: "right"
                id: orto_car

                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: 95
                        padding: (5, 0, 5, 0)
                        LightBox:
                            Label:
                                text: ""
                                bold: True
                                halign: "center"
                                valign: "middle"
                                text_size: self.size
                                size_hint_x: .8
                        DarkBox:
                            Label:
                                size_hint_x: .8
                                markup: True
                                text: "[size=18][b]Import OrthoMCL groups file[/b][/size]\n[size=13]Provide the group files generated by OrthoMCL and skip to Step 2[/size]"
                                halign: "left"
                                valign: "middle"
                                text_size: self.size
                            ProcessBt:
                                id: mysql_bt
                                size_hint_x: .2
                                text: "Import..."

                    BoxLayout:
                        size_hint_y: None
                        height: 40
                        padding: (5, 0, 5, 0)
                        LightBox:
                            padding: 0
                            Label:
                                text: "Step 1. Ortholog search"
                                bold: True
                                halign: "center"
                                valign: "middle"
                                text_size: self.size
                                size_hint_x: .8

                    ScrollView:
                        id: orto_search_sv

                        GridLayout:
                            id: gl_orto_search
                            cols: 1
                            padding: (5,5)
                            size_hint_y: None
                            height: sum([x.size[1] for x in self.children])

                            DarkBox:
                                Label:
                                    size_hint_x: .8
                                    markup: True
                                    text: "[size=18][b]MySQL settings[/b][/size]\n[size=13]Provide the required information to access and modify SQL databases[/size]"
                                    halign: "left"
                                    valign: "middle"
                                    text_size: self.size
                                ProcessBt:
                                    id: mysql_bt
                                    size_hint_x: .2
                                    text: "Select..."
                                    on_release:
                                        app.dialog_mysql()

                            Hseparator

                            DarkBox:
                                id: dark_l
                                Label:
                                    id: output_label
                                    size_hint_x: .8
                                    markup: True
                                    text: "[size=18][b]Threads[/b][/size]\n[size=13]Number of threads (CPU's) to use during USEARCH[/size]"
                                    halign: "left"
                                    valign: "middle"
                                    text_size: self.size
                                Spinner:
                                    background_normal: "data/backgrounds/bt_process.png"
                                    bold: True
                                    values: tuple(str(x) for x in range(1, multiprocessing.cpu_count() + 1))
                                    size_hint_x: .2
                                    text: "1"

                            Hseparator

                            DarkBox:
                                Label:
                                    id: output_label
                                    size_hint_x: .8
                                    markup: True
                                    text: "[size=18][b]Output directry[/b][/size]\n[size=13]Save output files to...[/size]"
                                    halign: "left"
                                    valign: "middle"
                                    text_size: self.size
                                ProcessBt:
                                    id: orto_dir
                                    text: "Select..."
                                    on_release:
                                        app.dialog_filechooser("ortho_dir")

                            BoxLayout:
                                size_hint_y: None
                                height: 60
                                AnchorLayout:
                                    Button:
                                        bold: True
                                        id: adv_search_options
                                        text: "Show additional options"
                                        size_hint: None, None
                                        width: 300
                                        height: 40
                                        on_release:
                                            app.toggle_orto_soptions()

                BoxLayout:
                    orientation: "vertical"

                    BoxLayout:
                        size_hint_y: None
                        height: 40
                        padding: (5, 0, 5, 0)
                        LightBox:
                            padding: 0
                            Label:
                                text: "Step 2. Process raw orthologs"
                                bold: True
                                halign: "center"
                                valign: "middle"
                                text_size: self.size
                                size_hint_x: .8

                    ScrollView:
                        id: orto_process_sv

                BoxLayout:
                    orientation: "vertical"

                    BoxLayout:
                        size_hint_y: None
                        height: 40
                        padding: (5, 0, 5, 0)
                        LightBox:
                            padding: 0
                            Label:
                                text: "Step 3. Translate orthogs"
                                bold: True
                                halign: "center"
                                valign: "middle"
                                text_size: self.size
                                size_hint_x: .8

                    ScrollView:
                        id: orto_transform_sv

    BoxLayout:
        size_hint_y: None
        height: 65
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: (.3,.3,.3,.3)
            Rectangle:
                pos: self.pos
                size: self.size
        ExecutionBt:
            id: execute
            text: "Search Orthologs"
            on_press:
        ExecutionBt:
            text: "View Queue"
            id: queue_bt
            on_release:
                app.save_operation_queue()
                app.go_carousel(2, "queue")
                app.toggle_sidepanel()
        ExecutionBt:
            text: "Clear Options"
            on_release:

