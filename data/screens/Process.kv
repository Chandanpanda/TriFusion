<ExecutionBt@Button>
    background_normal: "data/backgrounds/process_exec.png"
    bold: True
    halign: "center"
    valign: "middle"
    text_size: self.size
    font_size: 18
    color: (1,1,1,1)
    size_hint_y: None
    height: 45

ShowcaseScreen:
    name: "Process"

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            padding: 5
            spacing: 10
            height: 110
            orientation: "vertical"
            LightBox:
                Label:
                    markup: True
                    text: "[size=15][b]Choose your destiny[/b][/size]"
                    halign: "left"
                    valign: "middle"
                    color: [.85, .85, .85, 1]
                    text_size: self.size
            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                Sidebt:
                    id: conv
                    text: "Conversion"
                    group: "process_panel"
                    on_press:
                        app.toggle_groups(self)
                        app.save_main_operation("conversion")
                Sidebt:
                    id: conc
                    text: "Concatenation"
                    group: "process_panel"
                    on_press:
                        app.toggle_groups(self)
                        app.save_main_operation("concatenation")

        ScrollView:
            size_hint_y: None
            id: sub_conc
            height: 0
            BoxLayout:
                padding: 5
                spacing: 10
                Widget:
                    size_hint_x: .5
                BoxLayout:
                    size_hint_x: .5
                    LightBox:
                        padding: 5
                        Label:
                            halign: "left"
                            valign: "middle"
                            text_size: self.size
                            size_hint_x: .7
                            text: "  Reverse a concatenated file?"
                            bold: True
                        ProcessBt:
                            id: rev_conc
                            size_hint_x: .3
                            background_normal: "data/backgrounds/bt_process_off.png"
                            text: "OFF"
                            bold: True
                            on_release:
                                app.dialog_reverse_concatenation("Reverse concatenation settings")

        # This will be the main screen with the options and stuff

        # The inclusion of the Carousel in the ScrollView is apparently
        # necessary. Otherwise, widgets in general will not respond as they
        # should to touch events
        ScrollView:
            bar_width: 4.5
            scroll_type: ["bars"]
            id: process_sv

        BoxLayout:
            size_hint_y: None
            height: 65
            padding: 10
            spacing: 10
            canvas.before:
                Color:
                    rgba: (.3,.3,.3,.3)
                Rectangle:
                    pos: self.pos
                    size: self.size
            ExecutionBt:
                id: execute
                text: "Execute"
                on_press: app.process_exec()
            ExecutionBt:
                text: "View Queue"
                id: queue_bt
                on_release:
                    app.save_operation_queue()
                    app.go_carousel(2, "queue")
                    app.toggle_sidepanel()
            ExecutionBt:
                text: "Clear Options"
                on_release:
                    app.check_action("Are you sure you want to clear all options?", app.process_clear_options, None)
