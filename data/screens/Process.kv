<ExecutionBt@Button>
    size_hint_y: None
    height: 45
    background_normal: "data/backgrounds/process_exec.png"
    background_down: "data/backgrounds/process_exec_down.png"
    bold: True
    halign: "center"
    valign: "middle"
    text_size: self.size
    font_size: 22
    color: (0.1,0.1,0.1,1)

ShowcaseScreen:
    name: "Process"

    BoxLayout:
        orientation: "vertical"
        spacing: 10

        BoxLayout:
            size_hint_y: None
            padding: 5
            spacing: 10
            height: 110
            orientation: "vertical"
            LightBox:
                Label:
                    markup: True
                    text: "[size=15][b]Choose your destiny[/b][/size]"
                    halign: "left"
                    valign: "middle"
                    color: [.85, .85, .85, 1]
                    text_size: self.size
            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                Sidebt:
                    id: conv
                    text: "Conversion"
                    group: "process_panel"
                    on_press:
                        #carousel.load_slide(carousel.slides[0])
                        app.toggle_groups(self)
                        app.save_main_operation("conversion")
                Sidebt:
                    id: conc
                    text: "Concatenation"
                    group: "process_panel"
                    on_press:
                        #carousel.load_slide(carousel.slides[1])
                        app.toggle_groups(self)
                        app.save_main_operation("concatenation")

        # This will be the main screen with the options and stuff

        # The inclusion of the Carousel in the ScrollView is apparently
        # necessary. Otherwise, widgets in general will not respond as they
        # should to touch events
        ScrollView:
            BoxLayout:
                orientation: "vertical"

                ScrollView:
                    #size_hint_y: .85
                    bar_width: 4.5
                    id: process_sv

        BoxLayout:
            canvas.before:
                Color:
                    rgba: (0,0,0,.5)
                Rectangle:
                    pos: self.pos
                    size: self.size
            orientation: "horizontal"
            size_hint_y: None
            height: 65
            padding: 10
            spacing: 20
            ExecutionBt:
                text: "Execute"
                on_release: app.process_exec()
            ExecutionBt:
                text: "View queue"
