ShowcaseScreen:
    name: "fc"

    BoxLayout:
        orientation: "horizontal"

        BoxLayout:
            size_hint_x: .25
            orientation: "vertical"
            padding: 10
            spacing: 10

            Label:
                text: "Bookmarks"
                bold: True
                size_hint_y: .1
                halign: "center"
                valign: "middle"
                text_size: self.size

            ScrollView:
                id: sv_book
                size_hint_y:.8

            Button:
                size_hint_y: None
                height: root.height * .08
                text: "Add Bookmark"

        BoxLayout:
            size_hint_x: .75
            orientation: "vertical"

            FileChooserIconView:
                id: icon_view_tab
                multiselect: True

            BoxLayout:
                size_hint_y: .13
                padding: 10
                spacing: 30

                Button:
                    text: "Open"
                    on_release:
                        app.load(icon_view_tab.selection)
                        app.go_previous_screen()

                Button:
                    text: "Cancel"
                    on_release: app.go_previous_screen()
