ShowcaseScreen:
    name: "fc"

    BoxLayout:
        orientation: "vertical"

        FileChooserIconView:
            id: icon_view_tab
            multiselect: True
            path: "/home/diogo/Diogo"

        BoxLayout:
            size_hint_y: .1
            padding: 10
            spacing: 30

            Button:
                text: "Open"
                on_release:
                    app.load(icon_view_tab.selection)


            Button:
                text: "Cancel"
                on_release: app.go_previous_screen()
