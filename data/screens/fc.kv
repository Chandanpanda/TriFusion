ShowcaseScreen:
    name: "fc"

    BoxLayout:
        orientation: "horizontal"

        BoxLayout:
            size_hint_x: .25
            orientation: "vertical"
            padding: 10
            spacing: 10

            Label:
                text: " Bookmarks"
                bold: True
                size_hint_y: .1
                halign: "center"
                valign: "middle"
                text_size: self.size
                canvas.before:
                    Color:
                        rgba: (0.3, 0.3, 0.3, .8)
                    Rectangle:
                        pos: self.pos
                        size: self.size

            ScrollView:
                size_hint_y: .8
                GridLayout:
                    size_hint_y: None
                    height: 0
                    cols: 2
                    id: sv_book
                    orientation: "vertical"
                    spacing: [5, 10]


            Button:
                size_hint_y: None
                height: root.height * .08
                text: "Add Bookmark"
                on_release: app.save_bookmark(icon_view_tab.path)

        BoxLayout:
            size_hint_x: .75
            orientation: "vertical"

            FileChooserIconView:
                id: icon_view_tab
                multiselect: True

            BoxLayout:
                size_hint_y: .13
                padding: 10
                spacing: 30

                Button:
                    text: "Open"
                    on_release:
                        if icon_view_tab.selection: app.load(icon_view_tab.selection); app.go_previous_screen()

                Button:
                    text: "Cancel"
                    on_release: app.go_previous_screen()
