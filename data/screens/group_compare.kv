ShowcaseScreen:
    name: "group_compare"

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 90
            AnchorLayout:
                anchor_x: "left"
                anchor_y: "center"
                size_hint_x: None
                width: 110
                Button:
                    size_hint: None, None
                    size: 100,30
                    text: "Back"
                    on_release:
                        app.go_previous_screen()

            Vseparator:
                thickness: 1.5

            BoxLayout:
                orientation: "vertical"
                padding: 5
                Label:
                    text: "Display:"
                    size_hint_y: None
                    height: 25
                    bold: True
                    color: (0.216, 0.67, 0.784, 1)
                BoxLayout:
                    BoxLayout:
                        orientation: "vertical"
                        id: display_bx
                        BoxLayout:
                            Label:
                                text: "Total orthologs"
                                size_hint_x: .8
                            CheckBox:
                                id: total_ort
                                active: True
                                size_hint_x: .2
                                on_active:
                                    app.orto_compare_groups()
                        BoxLayout:
                            Label:
                                text: "Species filter"
                                size_hint_x: .8
                            CheckBox:
                                id: sp_ort
                                active: True
                                size_hint_x: .2
                                on_active:
                                    app.orto_compare_groups()
                    BoxLayout:
                        orientation: "vertical"
                        BoxLayout:
                            Label:
                                text: "Gene filter"
                                size_hint_x: .8
                            CheckBox:
                                id: gn_ort
                                active: True
                                size_hint_x: .2
                                on_active:
                                    app.orto_compare_groups()
                        BoxLayout:
                            Label:
                                text: "Final orthologs"
                                size_hint_x: .8
                            CheckBox:
                                id: final_ort
                                active: True
                                size_hint_x: .2
                                on_active:
                                    app.orto_compare_groups()

            Vseparator:
                thickness: 1.5

            BoxLayout:
                orientation: "vertical"
                padding: 5
                Label:
                    text: "Filter settings:"
                    size_hint_y: None
                    height: 25
                    bold: True
                    color: (0.216, 0.67, 0.784, 1)
                BoxLayout:
                    orientation: "vertical"
                    BoxLayout:
                        Label:
                            text: "Maximum gene copies:"
                            size_hint_x: 0.8
                        StringInput:
                            text: str(app.orto_max_gene)
                            size_hint_x: .2
                            multiline: False
                            id: gn_txt
                            on_text_validate:
                                app.orto_change_filters(int(self.text), int(sp_txt.text), apply_all=True)
                                app.orto_compare_groups()

                    BoxLayout:
                        Label:
                            text: "Minimum species represented:"
                            size_hint_x: 0.8
                        StringInput:
                            text: str(app.orto_min_sp)
                            size_hint_x: .2
                            multiline: False
                            id: sp_txt
                            on_text_validate:
                                app.orto_change_filters(int(gn_txt.text), int(self.text), apply_all=True)
                                app.orto_compare_groups()

        Hseparator:
            thickness: 1.5

        ScrollView:
            ScatterLayout:
                do_rotation: False
                id: plot_content
                Label:
                    text: "Plots and stuff"